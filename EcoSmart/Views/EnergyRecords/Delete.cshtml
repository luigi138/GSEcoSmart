@model EcoSmart.Model.EnergyRecord

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete Energy Record</h1>

<div>
    <h4>Are you sure you want to delete this record?</h4>
    <dl class="row">
        <dt class="col-sm-2">Id</dt>
        <dd class="col-sm-10">@Model.Id</dd>
        <dt class="col-sm-2">Device Id</dt>
        <dd class="col-sm-10">@Model.DeviceId</dd>
        <dt class="col-sm-2">Amount</dt>
        <dd class="col-sm-10">@Model.Amount</dd>
        <dt class="col-sm-2">Timestamp</dt>
        <dd class="col-sm-10">@Model.Timestamp</dd>
        <dt class="col-sm-2">Type</dt>
        <dd class="col-sm-10">@Model.Type</dd>
    </dl>
</div>
<form method="post" asp-action="DeleteConfirmed">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="/EnergyRecords" class="btn btn-secondary">Cancel</a>
</form>
